# ============================================
# Copy this file to .env and fill in values.
# NEVER commit .env to version control.

# ---- Application ----
APP_NAME=PMT
APP_ENV=development
DEBUG=true
LOG_LEVEL=debug

# ---- Server ----
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ---- Database ----
DB_HOST=localhost
DB_PORT=5432
DB_USER=pmt_user
DB_PASSWORD=pmt_secret
DB_NAME=pmt_db
DATABASE_URL=postgresql+asyncpg://pmt_user:pmt_secret@localhost:5432/pmt_db

# ---- Redis ----
REDIS_URL=redis://localhost:6379/0

# ---- JWT / Auth ----
SECRET_KEY=change-me-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ---- Email (SMTP) ----
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_NAME=PMT
EMAILS_FROM_EMAIL=noreply@pmt.dev

